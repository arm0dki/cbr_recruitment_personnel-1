@import './reset.css'

.MainPage
    max-width 1260px
    position relative
    margin 0 auto
    display flex
    flex-direction column
    min-height 200px
    background-color #fafafa
    padding 10px
    font-family Stem,sans-serif

    .recruitment_header-title
        margin 20px 0 0 0
        color #08c
        text-align: center

    .recruitment_menu
        display flex
        flex-direction row
        justify-content flex-start
        margin 20px 10px 10px 10px

        span
            display inline-block
            text-align center
            vertical-align middle
            user-select none
            background-color #eee
            border 1px solid transparent
            padding 2px 8px
            font-size 16px
            line-height 1.5
            border-radius 4px
            transition: color 0.15s ease-in-out, background-color 0.15s ease-in-out, border-color 0.15s ease-in-out
            cursor pointer
            margin-right 20px

        span:hover
            color #0a0a0a
            transform scale(1.03)	

        span.active
            color #0a0a0a
            background-color: #dad6d6;
            transform scale(1.03)			

    .recruitment_content
        margin auto
        width 99%
        min-height 400px
        box-shadow 0 0 4px 2px #ddd
        border-radius 4px

        .Report1
            .content_table
                padding 10px 10px 20px 10px
                display flex
                justify-content center
                .font--small
                    font-size 10px
                .table
                    border-collapse separate
                    border-spacing 0
                    tr:hover
                        background-color #d8d8d8
                    tr
                        position relative

                        th
                            font-weight 500
                            letter-spacing 0.01em
                            text-transform uppercase
                            text-align left
                            outline none
                            color #8F97AC
                            background #F5F6FA
                            border: 1px solid #CDD3E4
                            text-align left
                            height 63px
                            line-height 1.16666667
                            span
                                padding-right 14px
                                display inline-block
                                position relative;
                        td
                            padding 4px 10px 4px 0
                            height 40px
                            font-size 14px
                            line-height 1.14285714
                            letter-spacing 0.01em
                            border: 1px solid #CDD3E4
                            //border-bottom 1px solid #CDD3E4
                        .table-box
                            display flex

                            input[type=text]
                                margin-right 5px
                                padding 4px

                            input[type=button]
                                margin 1px 0

                        .sorting 
                            span:after
                                content ''
                                position absolute
                                top 50%
                                right 0
                                margin-top -4px
                                border-left:4px solid transparent
                                border-right 4px solid transparent
                                border-top 7px solid #8F97AC

                        .asc 
                            span:after
                                border-top none
                                border-bottom 7px solid #CC003D

                        .desc
                            span:after
                                border-top-color #CC003D
                        td,th
                            padding-left 10px
                    th:first-child 
                        padding-left 10px