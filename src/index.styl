        .content_table
            padding 10px 10px 20px 10px
            display flex
            justify-content center
            .font--small
                font-size 10px
            .table
                border-collapse separate
                border-spacing 0
                tr:hover
                    background-color #d8d8d8
                tr
                    position relative
                    .th_left
                        text-align left

                    th
                        font-weight 500
                        letter-spacing 0.01em
                        text-transform uppercase
                        text-align right
                        outline none
                        color #8F97AC
                        background #F5F6FA
                        border: 1px solid #CDD3E4
                        height 63px
                        line-height 1.16666667
                        span
                            padding-right 14px
                            display inline-block
                            position relative
                            text-align right
                    td
                        padding 4px 10px 4px 0
                        height 40px
                        font-size 14px
                        line-height 1.14285714
                        letter-spacing 0.01em
                        border: 1px solid #CDD3E4
                        //border-bottom 1px solid #CDD3E4

                    .total
                        background #e1e4f1
                        font-weight 700
                    td,th
                        padding-left 10px