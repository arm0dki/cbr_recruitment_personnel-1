@import './reset.css'

.MainPage
    //max-width 1260px
    position relative
    margin 0 auto
    display flex
    flex-direction column
    //min-height 200px
    background-color #fafafa
    padding 10px
    font-family Stem,sans-serif

    .recruitment_header-title
        margin 20px 0
        color #08c
        text-align: center

    .recruitment_menu
        display flex
        flex-direction row
        justify-content flex-start
        margin 20px 10px 10px 10px

        span
            display inline-block
            text-align center
            vertical-align middle
            user-select none
            background-color #eee
            border 1px solid transparent
            padding 2px 8px
            font-size 16px
            line-height 1.5
            border-radius 4px
            transition: color 0.15s ease-in-out, background-color 0.15s ease-in-out, border-color 0.15s ease-in-out
            cursor pointer
            margin-right 20px

        span:hover
            color #0a0a0a
            transform scale(1.03)	

        span.active
            color #0a0a0a
            background-color: #dad6d6;
            transform scale(1.03)			

    .recruitment_content
        margin auto
        width 99%
        min-height 400px
        box-shadow 0 0 4px 2px #ddd
        border-radius 4px

        .startpage_content
            display flex
            width 100%
            min-height 400px
            background-color #f5f6fa

            img
                width 300px
                height 300px
                z-index 1
                margin 50px auto
                top 0
                right 0
                bottom 0
                left 0

        .report_options
            padding 10px
            
            fieldset
                border 1px solid #cdd3e4
                border-radius 2px
                padding 5px

                .report_options-div
                    display flex
                    flex-direction row
                    justify-content space-start
                
                legend
                    padding 0px 5px 0px 5px   
            .select-css
                display block 
                width 250px
                color #444 
                line-height 1.3
                padding .6em 1.4em .5em .8em
                box-sizing border-box
                margin 0 10px 0 0
                border 1px solid #cdd3e4
                box-shadow 0 1px 0 1px rgba(0,0,0,.04)
                -moz-appearance none
                -webkit-appearance none
                appearance none
                background-color #fff 
